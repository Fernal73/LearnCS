#!/usr/bin/env bash
usage()
{
  echo "Usage: $0 dir"
  echo "dir - Project directory"
  exit 1
}

if [ "$#" -ne 1 ] || ! [ -d "$1" ]; 
then
  usage
fi

declare -i res=0
declare -r classesFile=".maincls"

proj=$1

set +o noglob
cd "$proj"
printf -v findCmd '%q ' find . -type f -name '*.cs'
readarray -t args < <(eval $findCmd)
if [ ${#args[@]} -ne 0 ]; then
  if [ -e "$classesFile" ];
  then
    readarray -t classes < <(cat "$classesFile")
    for class in "${classes[@]}";
    do
      csc "${args[@]}" -main:"$class"
      res=("$?"+"$res")
    done
  else
    csc "${args[@]}"
    res="$?"
  fi
fi
cd ..
set -o noglob
exit "$res"
